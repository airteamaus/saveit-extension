{
  "manifest_version": 2,
  "name": "SaveIt",
  "version": "0.5.3",
  "description": "Save web pages and rediscover them with AI-powered metadata and search",
  "browser_specific_settings": {
    "gecko": {
      "id": "saveit@airteam.com.au",
      "data_collection_permissions": {
        "required": [
          "authenticationInfo",
          "bookmarksInfo",
          "websiteActivity"
        ]
      }
    }
  },
  "permissions": [
    "activeTab",
    "notifications",
    "identity",
    "storage",
    "https://*.cloudfunctions.net/*",
    "https://*.run.app/*",
    "https://www.googleapis.com/oauth2/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["src/config.js", "src/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "src/icon.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "src/newtab.html"
  },
  "icons": {
    "48": "src/icon.png"
  }
}
