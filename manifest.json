{
  "manifest_version": 3,
  "name": "SaveIt",
  "version": "0.11.7",
  "description": "Save web pages and rediscover them with AI-powered metadata and search",
  "browser_specific_settings": {
    "gecko": {
      "id": "saveit@airteam.com.au"
    }
  },
  "permissions": [
    "activeTab",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://*.cloudfunctions.net/*",
    "https://*.run.app/*",
    "https://www.googleapis.com/*",
    "https://*.firebaseapp.com/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "type": "module"
  },
  "action": {
    "default_icon": {
      "48": "src/icon.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "src/newtab.html"
  },
  "icons": {
    "48": "src/icon.png"
  }
}
