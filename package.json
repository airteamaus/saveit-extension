{
  "name": "saveit-extension",
  "version": "1.2.0",
  "description": "Save web pages and rediscover them with AI-powered metadata and search",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "pkill -f playwright || true && playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "build": "node scripts/bundle-firebase.js && web-ext build --overwrite-dest",
    "validate": "web-ext lint",
    "dev": "web-ext run",
    "upload-chrome": "node scripts/upload-chrome.js",
    "upload-chrome:publish": "node scripts/upload-chrome.js --publish",
    "upload-chrome:testers": "node scripts/upload-chrome.js --publish --target trustedTesters",
    "prepare": "husky install"
  },
  "keywords": [
    "browser-extension",
    "firefox",
    "bookmarks",
    "ai",
    "search"
  ],
  "author": "Rich",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.48.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "chokidar": "^4.0.3",
    "chrome-webstore-upload": "^4.0.3",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.0",
    "eslint": "^9.15.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^25.0.0",
    "vitest": "^4.0.8",
    "web-ext": "^9.1.0",
    "webextension-polyfill": "^0.12.0",
    "zod": "^3.24.1"
  },
  "dependencies": {
    "firebase": "^12.5.0"
  }
}
