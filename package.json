{
  "name": "saveit-extension",
  "version": "1.6.6",
  "description": "Save web pages and rediscover them with AI-powered metadata and search",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "build": "node scripts/bundle-firebase.js && node scripts/bundle-graph.js && web-ext build --overwrite-dest",
    "build:graph": "node scripts/bundle-graph.js",
    "validate": "web-ext lint --ignore-files 'saveit-backend/**' --ignore-files 'scripts/**' --ignore-files 'coverage/**' --ignore-files 'tests/**' --ignore-files 'test-*.html' --ignore-files 'firefox-dev-profile/**'",
    "dev": "web-ext run",
    "upload-chrome": "node scripts/upload-chrome.js",
    "upload-chrome:publish": "node scripts/upload-chrome.js --publish",
    "upload-chrome:testers": "node scripts/upload-chrome.js --publish --target trustedTesters",
    "prepare": "husky"
  },
  "keywords": [
    "browser-extension",
    "firefox",
    "bookmarks",
    "ai",
    "search"
  ],
  "author": "Rich",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "chokidar": "^4.0.3",
    "chrome-webstore-upload": "^4.0.3",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "vitest": "^4.0.15",
    "web-ext": "^9.2.0",
    "webextension-polyfill": "^0.12.0",
    "zod": "^4.1.13"
  },
  "dependencies": {
    "@sentry/browser": "^8.55.0",
    "firebase": "^12.6.0"
  }
}
